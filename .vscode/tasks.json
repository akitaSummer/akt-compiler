{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "Clang Compiler",
      "command": "/usr/bin/clang",
      "args": [
        "-std=c17",
        "${workspaceFolder}/*.c",
        "-o",
        "${workspaceFolder}/main"
